<h1>Book flight</h1>

<%= form_for @booking do |f| %>
  <%= f.hidden_field :flight_id %>
  <%= f.fields_for :passengers do |ff| %>
    <p>First name: <%= ff.text_field :first_name %></p>
    <p>Last name: <%= ff.text_field :last_name %></p>
  <% end %>
  <div class="button"><%= f.submit "Book" %></div class="button">
<% end %>
